<%- include('../partials/header') %> 
<div class="flash-container">
<%- include('../partials/flash') %> 
</div>
<main>
    
<h1>Select A Dog to Plan your Walk!</h1>
<% let random = Math.floor(Math.random() * allDogs.length); %>
<% let dog = allDogs[random]; %>
<section>
    <div class="mobile-hero" id="hero">
        <figure><div class="big"></div></figure>
        <div id="feature">

            <div>
                <div class="bigwindow">
                    <img src="<%= dog.img %>">
                </div>
                <figcaption>
                    <h2> <%= dog.name %> </h2>
                </figcaption>
            </div>

            <article>
                <h4>Dog of the Day:</h4>
                <p>Name: <%= dog.name %></p>
                <p>Sex: <%= dog.sex %></p>
                <p>Breed: <%= dog.breed %></p>
                <p>Birthday: <%= dog.birthDate.toISOString().replace('T', ' ').substr(0, 11); %></p>

                <% let year = 1 / (365.25 * 24 * 60 * 60 * 1000); %>
                <% let dogBirth = Date.parse(dog.birthDate); %>
                <% let current = Date.parse(new Date()); %>
                <% let time = (current - dogBirth) * year; %>
                <p>Age: <%= Math.floor(time); %></p>
            </article>

        </div>
    </div>
</section>
<section>
    <div id="tiles">
        <% allDogs.forEach(item => { %>
            <a href="/dogs/<%= item.id %>">
                <div class="tile">
                    <figure><div class="medium"></div></figure>
                    <div class="smallwindow">
                        <img src="<%= item.img %>">
                    </div>
                    <figcaption>
                        <h2> <%= item.name %> </h2>
                    </figcaption>
                </div>
            </a>
        <% }) %>
    </div>
</section>

</main>
<%- include('../partials/footer') %> 
